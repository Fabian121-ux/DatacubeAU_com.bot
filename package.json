{
  "name": "datacubeau-bot",
  "version": "1.0.0",
  "description": "Datacube AU WhatsApp AI Assistant Bot",
  "main": "bot/index.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "node --watch api/server.js",
    "bot:start": "node bot/index.js",
    "setup": "node scripts/setup.js",
    "seed": "node scripts/seed-context.js",
    "health": "node scripts/health-check.js",
    "api": "node api/server.js",
    "prod:start": "pm2 start ecosystem.config.js",
